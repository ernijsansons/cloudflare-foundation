{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "foundation-workflows",
  "main": "src/index.ts",
  "compatibility_date": "2025-09-25",
  "compatibility_flags": ["nodejs_compat"],
  "observability": { "enabled": true },
  "workflows": [
    { "binding": "ONBOARDING_WORKFLOW", "name": "tenant-onboarding", "class_name": "TenantOnboardingWorkflow" },
    { "binding": "DATA_PIPELINE_WORKFLOW", "name": "data-pipeline", "class_name": "DataPipelineWorkflow" },
    { "binding": "REPORT_WORKFLOW", "name": "report-generation", "class_name": "ReportGenerationWorkflow" },
    { "binding": "EMAIL_WORKFLOW", "name": "email-sequence", "class_name": "EmailSequenceWorkflow" }
  ],
  "d1_databases": [
    { "binding": "DB", "database_name": "foundation-primary", "database_id": "34bce593-9df9-4acf-ac40-c8d93a7c7244" }
  ],
  "r2_buckets": [
    { "binding": "FILES", "bucket_name": "foundation-files" }
  ],
  "ai": { "binding": "AI" },
  "queues": {
    "producers": [
      { "binding": "AUDIT_QUEUE", "queue": "foundation-audit" }
    ]
  },
  "env": {
    "staging": {
      "name": "foundation-workflows-staging",
      "d1_databases": [
        { "binding": "DB", "database_name": "foundation-primary-staging", "database_id": "STAGING_DB_ID" }
      ],
      "r2_buckets": [
        { "binding": "FILES", "bucket_name": "foundation-files-staging" }
      ]
    },
    "production": {
      "name": "foundation-workflows-production",
      "d1_databases": [
        { "binding": "DB", "database_name": "foundation-primary", "database_id": "34bce593-9df9-4acf-ac40-c8d93a7c7244" }
      ],
      "r2_buckets": [
        { "binding": "FILES", "bucket_name": "foundation-files" }
      ]
    }
  }
}
